# 应用配置
NODE_ENV=development
PORT=3000
APP_NAME=nest_backend

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_password
DB_DATABASE=your_database

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 配置（生产环境必须使用强随机字符串，至少32位）
JWT_SECRET=your_jwt_secret_key_change_this_in_production_min_32_chars
JWT_EXPIRES_IN=7d

# 邮件配置（如果使用）
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=noreply@example.com

# API 限流配置
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# CORS 配置
CORS_ORIGIN=http://localhost:8000

# 日志级别
LOG_LEVEL=info

# 密码加密密钥（生产环境必须使用强随机字符串）
PASSWORD_SECRET=your_password_secret_key_change_this_in_production

# 日志文件路径（可选，默认为 ./logs）
LOG_FILE_PATH=./logs/app.log
